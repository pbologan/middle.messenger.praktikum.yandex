extends layout/base-layout

block variables
    - const title = `Sign Up`;
    - const cssPaths = [`login-sign-up.css`];

block content
    main.layout
        form
            .form-container.sing-up-container
                h3.header Регистрация
                .form__inputs-container.sign-up__inputs-container
                    input(type=`email` placeholder=`Почта` name=`email` id=`email` required)
                    input(type=`text` placeholder=`Логин` name=`login` id=`login` required)
                    input(type=`text` placeholder=`Имя` name=`first_name` id=`first_name` required)
                    input(type=`text` placeholder=`Фамилия` name=`second_name` id=`second_name` required)
                    input(type=`tel` placeholder=`Телефон` pattern="\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}" name=`phone` id=`phone` required)
                    input(type=`password` placeholder=`Пароль` name=`password` id=`password` required)
                    input(type=`password` placeholder=`Пароль (ещё раз)` name=`repeat_password` id=`repeat_password` required)
                .form__buttons-container
                    a.link(href=`chat.pug`)
                        button.form__submit-button(type=`button`) Зарегистрироваться
                    a.link(href=`login.pug`)
                        button.form__register-button(type=`button`) Войти